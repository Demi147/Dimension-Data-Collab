@model IEnumerable<BackEnd.Models.PersonModel>

@{
    ViewData["Title"] = "ListAccounts";
}

<h1>List Accounts</h1>

<p>
    <a asp-action="Register">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @{
                        if (User.IsInRole("admin"))
                        {
                            @Html.ActionLink("Details", "Details", new { id = item._id }) @:|
                            @Html.ActionLink("Edit", "EditAccount", new {  id=item._id  }) @:|
                            @Html.ActionLink("Delete", "Delete", new { id = item._id })
                        }
                        if (User.IsInRole("manager"))
                        {
                            @Html.ActionLink("Details", "Details", new { id = item._id }) @:|
                        }
                    }
                </td>
            </tr>
        }
            
    </tbody>
</table>
