@model BackEnd.Models.PersonModel

@{
    ViewData["Title"] = "EditAccount";
}

<h1>EditAccount</h1>

<h4>PersonModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @*  TODO: Edit password

            *@
            @{
                if (User.IsInRole("admin"))
                {
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select class="form-control" asp-for="Role" asp-items="@(new SelectList(new List<string>() {"user","manager","admin" }))"></select>
                        @*<input asp-for="Role" class="form-control" />*@
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="PasswordHash" class="control-label"></label>
                        <input asp-for="PasswordHash" class="form-control" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>*@
                }
                if (User.IsInRole("manager"))
                {
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        @Html.DisplayFor(item=>item.Role)
                        @*<input asp-for="Role" class="form-control" />*@
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                }
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListAccounts">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
